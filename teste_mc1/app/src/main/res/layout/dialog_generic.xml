<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/genericDialogLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/genericDialogImg"
            android:layout_width="@dimen/generic_dialog_image_width"
            android:layout_height="@dimen/generic_dialog_image_height"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/genericDialogTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_margin_large"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genericDialogBodyTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_margin_large"
            android:layout_marginRight="@dimen/horizontal_margin_large"
            android:layout_marginTop="@dimen/horizontal_margin_small"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_subheading" />

        <LinearLayout
            android:id="@+id/genericDialogButtonsLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin_large"
            android:layout_marginStart="@dimen/horizontal_margin_large"
            android:gravity="center"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:orientation="horizontal">

            <Button
                android:id="@+id/genericDialogNegativeBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_margin_small"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_continue"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/genericDialogPositiveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_btn_continue"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>

        <Button
            android:id="@+id/genericDialogSuccessBtn"
            android:layout_width="@dimen/generic_dialog_button_size"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/horizontal_margin"
            android:layout_marginEnd="@dimen/horizontal_margin_large"
            android:layout_marginStart="@dimen/horizontal_margin_large"
            android:layout_marginTop="@dimen/horizontal_margin_large"
            android:background="@drawable/bg_btn_continue"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>
